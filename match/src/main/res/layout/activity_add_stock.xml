    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bag"
    android:orientation="vertical"
    tools:context="com.zbmf.StocksMatch.activity.AddStockActivity">

    <include layout="@layout/activity_title"/>

    <!--<EditText-->
        <!--android:id="@+id/add_stock_et_name"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="35dp"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginBottom="20dp"-->
        <!--android:layout_marginLeft="30dp"-->
        <!--android:layout_marginRight="30dp"-->
        <!--android:layout_marginTop="30dp"-->
        <!--android:textSize="16sp"-->
        <!--android:background="@drawable/add_stock_et_bg"-->
        <!--android:ellipsize="end"-->
        <!--android:gravity="left|center_vertical"-->
        <!--android:hint="@string/add_stock_et_hint"-->
