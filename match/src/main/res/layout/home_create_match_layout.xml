<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:background="@color/white"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingBottom="2dp"
              android:paddingTop="20dp"
    >

    <TextView
        android:id="@+id/tv_create_match_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已成功举办1808场比赛"
        android:textColor="@color/black_33"
        android:textSize="14dp"
        />

    <TextView
        android:id="@+id/tv_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="共10000人次参赛"
        android:textColor="@color/black_66"
        android:textSize="12dp"
        />

    <TextView
        android:id="@+id/tv_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/yellow_button"
        android:text="@string/hold_competition"
        android:textColor="#4e2606"
        android:textSize="15dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="他们正在使用资本魔方网举办模拟炒股比赛"
        android:textColor="@color/black_66"
        android:textSize="14dp"
        />

    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/rv_school"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginTop="10dp"-->
    <!--/>-->
    <com.zbmf.StocksMatch.view.MZBannerView
        android:id="@+id/m_banner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        app:canLoop="true"
        app:indicatorAlign="center"
        app:indicatorPaddingBottom="20dp"
        app:indicatorPaddingLeft="10dp"
        app:isShowIndicator="true"
        app:middle_page_cover="false"
        app:open_mz_mode="true"/>

</LinearLayout>