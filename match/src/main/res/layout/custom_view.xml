<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="@dimen/dp_size_80"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_size_2"
        android:layout_centerInParent="true"
        android:background="@drawable/toast_bg1">

        <ImageView
            android:id="@+id/toastIv1"
            android:layout_width="@dimen/dp_size_50"
            android:layout_height="@dimen/dp_size_50"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/success"/>

        <TextView
            android:id="@+id/toastTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toastIv1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_size_5"
            android:paddingTop="@dimen/dp_size_2"
            android:paddingLeft="@dimen/dp_size_2"
            android:paddingRight="@dimen/dp_size_2"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:text="完成!"/>
    </RelativeLayout>

</RelativeLayout>