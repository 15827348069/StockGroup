<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/notice_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/title_layout"
              android:animateLayoutChanges="true"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/trumpet_color"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/icon_notice_gonggao_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:src="@drawable/trumpet"/>


        <com.zbmf.StocksMatch.view.CustomMarqueeTextView
            android:id="@+id/notice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/icon_notice_gonggao_img"
            android:layout_toLeftOf="@+id/notice_right_arrow"
            android:layout_toRightOf="@+id/icon_notice_gonggao_img"
            android:layout_toStartOf="@+id/notice_right_arrow"
            android:singleLine="true"
            android:textColor="#6b6b6b"
            android:textSize="13sp"/>

        <ImageButton
            android:id="@+id/notice_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:padding="7dp"
            android:src="@drawable/right_arrow"/>
    </RelativeLayout>
</LinearLayout>