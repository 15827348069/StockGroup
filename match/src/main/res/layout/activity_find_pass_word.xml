<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.zbmf.StocksMatch.activity.FindPassWordActivity">

    <include layout="@layout/activity_title"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ti_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:hint="@string/phone_no"
        android:paddingTop="35dp"
        android:textColorHint="@color/black_99"
        app:hintTextAppearance="@style/EditTextHintStyle">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/login_et_bg"
            android:drawableLeft="@drawable/icon_user"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/icon_user"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/et_user_pass"
            android:singleLine="true"
            android:textColor="@color/black"/>
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="10dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/ed_yzm"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/login_et_bg"
            android:drawableLeft="@drawable/icon_code"
            android:drawablePadding="15dp"
            android:drawableStart="@drawable/icon_code"
            android:hint="@string/code"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:singleLine="true"
            android:textColor="@color/black_33"
            android:textColorHint="@color/black_99"
            android:textCursorDrawable="@drawable/edit_color"
            android:textSize="15sp"
            tools:ignore="RtlSymmetry"/>

        <TextView
            android:id="@+id/tv_yzm"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/red_button_no_radius"
            android:gravity="center"
            android:text="@string/get_code"
            android:textColor="@color/white"/>
    </RelativeLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/it_user_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="10dp"
        android:hint="@string/password"
        android:textColorHint="@color/black_99"
        app:counterEnabled="true"
        app:counterMaxLength="18"
        app:counterOverflowTextAppearance="@style/EditErrTextStyle"
        app:counterTextAppearance="@style/EditTextCountStyle"
        app:hintTextAppearance="@style/EditTextHintStyle">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_user_pass"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/login_et_bg"
            android:drawableLeft="@drawable/icon_pwd"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/icon_pwd"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/black_33"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/btn_reg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/login_button"
        android:gravity="center"
        android:text="@string/commit"
        android:textColor="@color/white"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/registerProtocol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/forget_tip"
        android:textColor="@color/black_99"
        android:textSize="12sp"
        tools:ignore="RtlHardcoded"/>

</LinearLayout>
