<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="5dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ti_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:paddingTop="10dp"
        android:hint="@string/phone_no"
        android:textColorHint="@color/black_99"
        app:hintTextAppearance="@style/EditTextHintStyle">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="number"
            android:textSize="15sp"
            android:background="@drawable/login_et_bg"
            android:drawableLeft="@drawable/icon_user"
            android:drawablePadding="10dp"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/et_user_pass"
            android:singleLine="true"
            android:textColor="@color/black"
            android:drawableStart="@drawable/icon_user"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/clear_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:src="@drawable/icon_close_live"/>
        </RelativeLayout>
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="10dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/ed_yzm"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/login_et_bg"
            android:drawableLeft="@drawable/icon_code"
            android:drawablePadding="15dp"
            android:inputType="number"
            android:maxLength="6"
            android:hint="@string/code"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/black_33"
            android:textColorHint="@color/black_99"
            android:textCursorDrawable="@drawable/edit_color"
            android:textSize="15sp"
            android:drawableStart="@drawable/icon_code"
            android:paddingStart="15dp"
            tools:ignore="RtlSymmetry"/>

        <TextView
            android:id="@+id/tv_yzm"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/red_button_no_radius"
            android:gravity="center"
            android:text="@string/get_code"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/it_user_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="5dp"
        android:hint="@string/password"
        android:textColorHint="@color/black_99"
        app:counterEnabled="true"
        app:counterMaxLength="18"
        app:counterOverflowTextAppearance="@style/EditErrTextStyle"
        app:counterTextAppearance="@style/EditTextCountStyle"
        app:hintTextAppearance="@style/EditTextHintStyle">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_user_pass"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/login_et_bg"
            android:drawableLeft="@drawable/icon_pwd"
            android:drawablePadding="10dp"
            android:textSize="15sp"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/black_33"
            android:drawableStart="@drawable/icon_pwd"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/clear_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:src="@drawable/icon_close_live"/>
        </RelativeLayout>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/btn_reg"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_button"
        android:gravity="center"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <CheckedTextView
            android:id="@+id/tv_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:drawableLeft="@drawable/check_circle_50"
            android:drawablePadding="5dp"
            android:text="@string/agree_zf_protocol"
            android:textColor="@color/black_99"
            android:textSize="13sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginTop="2dp"
            android:drawableStart="@drawable/check_circle_50"/>

        <TextView
            android:id="@+id/mianze_text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zbmf_protocol"
            android:textColor="@color/black_99"
            android:textSize="13sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
