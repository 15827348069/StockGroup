<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/list_item_select"
                android:paddingBottom="8dp" android:id="@+id/root"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_live"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="12-12 10:10:19"
            android:textColor="@color/item_message"
            android:textSize="14sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/ll_top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView android:scaleType="fitXY"
            android:id="@+id/iv_img"
            android:layout_width="177dp"
            android:layout_height="match_parent"
            android:layout_marginRight="17dp"
            android:src="@color/linen"/>

        <TextView
            android:id="@+id/tv_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:background="#B3ea3535"
            android:drawableLeft="@mipmap/look_num"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="100"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_img"
            android:layout_toRightOf="@id/iv_img"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="线操作理论经讲K线线操作理论经讲K线 "
            android:textColor="#333333"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_zhuanji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_title"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/tv_title"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="所属专辑名称"
            android:textColor="#999999"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_title"
            android:layout_alignParentBottom="true"
            android:drawableLeft="@mipmap/icon_mfb_red"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="100"
            android:textColor="@color/red_line"
            android:textSize="16sp"/>
    </RelativeLayout>

</RelativeLayout>