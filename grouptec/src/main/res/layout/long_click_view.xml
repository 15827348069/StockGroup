<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:orientation="horizontal" android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView android:id="@+id/tv_del"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/pao_sel_l"
            android:gravity="center"
            android:padding="5dp"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="13sp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/c38"/>

        <TextView android:id="@+id/tv_copy"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/pao_sel"
            android:gravity="center"
            android:padding="5dp"
            android:text="复制"
            android:textColor="@color/white"
            android:textSize="13sp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/c38"/>

        <TextView android:id="@+id/tv_reply"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/pao_sel"
            android:gravity="center"
            android:padding="5dp"
            android:text="回复"
            android:textColor="@color/white"
            android:textSize="13sp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/c38"/>

        <TextView android:id="@+id/tv_report"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/pao_sel"
            android:gravity="center"
            android:padding="5dp"
            android:text="举报"
            android:textColor="@color/white"
            android:textSize="13sp"/>

        <View android:id="@+id/iv_vertical"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/c38"/>

        <TextView android:id="@+id/tv_chat"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/pao_sel"
            android:gravity="center"
            android:padding="5dp"
            android:text="私聊" android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="13sp"/>

        <View android:visibility="gone"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/c38"/>

        <TextView
            android:id="@+id/tv_gag"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/pao_sel_r"
            android:gravity="center"
            android:padding="5dp"
            android:text="禁言"
            android:textColor="@color/white"
            android:textSize="13sp"/>
    </LinearLayout>

    <ImageView android:id="@+id/iv_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sanj"/>

</LinearLayout>