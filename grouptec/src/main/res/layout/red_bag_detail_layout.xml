<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   	android:background="#fffaf5"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/colorAccent"
        >
        <ImageButton 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/return_red_bag_img"
            android:background="@color/transparent"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:id="@+id/return_button"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="魔方红包详情"
            android:textColor="#f5bd96"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            />
    </RelativeLayout>
    <com.zbmf.StockGTec.view.ScrollBottomScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="@null"
        android:id="@+id/red_bag_scrollview"
        >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true" 
        android:focusableInTouchMode="true"
        >
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/icon_red_bag_detail_backound"
	    >
	   <com.zbmf.StockGTec.view.RoundedCornerImageView
	       android:layout_width="65dp"
	       android:layout_height="65dp"
	       android:background="@color/transparent"
	       android:src="@drawable/avatar_default"
	       android:id="@+id/red_from_avatar"
	       android:layout_centerHorizontal="true"
	       android:layout_centerVertical="true"
	       /> 
	</RelativeLayout>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textColor="@color/black"
	    android:textSize="15dp"
	    android:background="#fffaf5"
	    android:paddingBottom="5dp"
	    android:gravity="center"
	    android:id="@+id/red_bag_from_name"
	    />
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:minHeight="26dp"
	    android:textColor="#b2b2b2"
	    android:textSize="13dp"
	    android:background="#fffaf5"
	    android:paddingTop="2dp"
	    android:paddingBottom="10dp"
	    android:paddingLeft="15dp"
	    android:paddingRight="15dp"
	    android:gravity="center"
	    android:lines="2"
	    android:id="@+id/red_bag_message"
	    />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:minHeight="90dp"
	    android:layout_height="wrap_content"
	    android:background="#fffaf5"
	    android:gravity="top"
	    android:orientation="vertical"
	    android:id="@+id/have_red_bag_layout"
	    android:visibility="visible"
	    >
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        android:gravity="center_horizontal|top"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="32dp"
	            android:textColor="@color/black"
	            android:paddingRight="2.5dp"
	            android:lines="1"
	            android:id="@+id/red_bag_message_count"
	            />
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:lines="1"
	            android:paddingLeft="2.5dp"
	            android:textSize="18dp"
	            android:id="@+id/red_bag_type"
	            android:textColor="@color/black"
	            />
	    </LinearLayout>

	    <Button
	        android:id="@+id/go_to_get_money"
	        android:layout_width="match_parent"
	        android:layout_height="32dp"
	        android:background="@color/transparent"
	        android:visibility="invisible"
	        android:text="点击前往赚大钱》"
	        android:textColor="@color/orangered"
	        android:textSize="13dp" />

	</LinearLayout>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="35dp"
	    android:background="#faf6f1"
	    android:gravity="bottom"
	    android:paddingBottom="3dp"
	    android:paddingLeft="15dp"
	    android:textSize="13dp"
	    android:textColor="@color/item_message"
	    android:id="@+id/red_packe_number"
	    />
	<com.zbmf.StockGTec.view.ListViewForScrollView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/have_red_packged_user"
	    android:divider="#dfdfdd"
	    android:dividerHeight="0.5dp"
	    android:background="#fffaf5"
	    />
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="#dfdfdd"
	    />
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="可在我的账户查看红包领取情况"
	    android:textColor="@color/item_message"
	    android:textSize="13dp"
	    android:paddingTop="10dp"
	    android:paddingBottom="20dp"
	    android:id="@+id/bottom_view"
	    android:layout_marginTop="10dp"
	    android:background="@color/transparent"
	    android:gravity="center"
	    />
	</LinearLayout>
	</com.zbmf.StockGTec.view.ScrollBottomScrollView>
</LinearLayout>
