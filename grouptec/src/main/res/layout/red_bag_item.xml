<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#fffaf5"
        >
        <com.zbmf.StockGTec.view.RoundedCornerImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/have_red_bag_user_avatar"
            android:background="@color/transparent"
            android:src="@drawable/avatar_default"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/have_red_bag_user_avatar"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:id="@+id/red_bag_item_name"
                android:layout_marginBottom="3dp"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:22"
                android:id="@+id/red_bag_item_time"
                android:textSize="13dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/item_message"
                />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:gravity="right"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/red_bag_item_countent"
                android:text="0.01元"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginBottom="3dp"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手气最佳"
                android:drawableLeft="@drawable/icon_red_bag_bast"
                android:textSize="15dp"
                android:drawablePadding="5dp"
                android:layout_marginTop="3dp"
                android:textColor="#ffc666"
                android:id="@+id/red_bag_bast"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
