<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checkable="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle" >
            <solid android:color="#ea3535" />
            <corners
                android:radius="0dp"/>

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle" >
            <solid android:color="#ea3535" />
            <corners
                android:radius="0dp"/>

        </shape>
    </item>
    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle" >
            <solid android:color="#ea3535" />
            <corners
                android:radius="0dp"/>

        </shape>
    </item>
    <item>
        <!--<shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
            <solid android:color="#ea3535"/>
            <corners
                android:radius="0dp"/>
        </shape>-->

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
            <gradient
                android:startColor="#ea3535"
                android:endColor="#ff754b"
                android:angle="0" />
            <stroke
                android:width="0dp"
                android:color="#ea3535" />
        </shape>
    </item>
</selector>