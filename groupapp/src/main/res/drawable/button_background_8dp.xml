<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--分別對應上面左圆角的半径，上面右圆角的半径，下面左圆角的半径，下面右圆角的半径-->
    <corners
        android:radius="8dp"
    />
    <!--設置漸變-->
    <gradient
        android:startColor="#ea3535"
        android:endColor="#ff754b"
        android:angle="45" />
