<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:text="魔方头条"
            style="@style/home_title"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <com.zbmf.StockGroup.view.ListViewForScrollView
        android:id="@+id/home_mf_head_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="0dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/group_layout_background"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/menu_button_select_tran"
        android:id="@+id/tv_more_button"
        android:text="更多"
        android:textColor="@color/black_99"
        android:textSize="15sp"
        />
</LinearLayout>