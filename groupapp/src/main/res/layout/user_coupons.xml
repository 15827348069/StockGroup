<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/list_item_select"
            android:id="@+id/coupons_countent_layout"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/coupons_checked"
                android:id="@+id/coupons_icon"
                android:layout_centerVertical="true"
                android:text="满送"
                android:gravity="center"
                android:textSize="22sp"
                android:textColor="@color/white"
                />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/coupons_icon"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coupons_name"
                android:text="涨停王者铁粉服务"
                android:textColor="@color/black"
                android:textSize="18dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coupons_title"
                android:text="订阅6个月送一个月"
                android:textSize="13dp"
                android:textColor="#666666"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coupons_group_name"
                android:textSize="13dp"
                android:textColor="#666666"
                android:visibility="gone"
                android:lines="1"
                android:maxLength="8"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coupons_date"
                android:textSize="13dp"
                android:textColor="#666666"
                />
            </LinearLayout>
        </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/coupon_checked"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:id="@+id/coupons_check"
                android:button="@null"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
</RelativeLayout>