<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:gravity="center"
    >
    <com.zbmf.StockGroup.view.RoundedCornerImageView
        android:layout_width="@dimen/teacher_avatar"
        android:layout_height="@dimen/teacher_avatar"
        android:src="@drawable/avatar_default"
        android:background="@color/transparent"
        android:id="@+id/home_teacher_avatar"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="首山"
        android:id="@+id/home_teacher_name"
        android:textSize="10sp"
        android:textColor="@color/black_99"
        android:layout_marginTop="6dp"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/live_number"
                android:drawableLeft="@drawable/care_live_textview"
                android:layout_marginRight="5dp"
                style="@style/number_text"
                />
            <TextView
                android:id="@+id/chat_number"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/care_chat_textview"
                style="@style/number_text"
                />
        </LinearLayout>
</LinearLayout>