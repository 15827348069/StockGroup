<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/group_layout_background"
    android:orientation="horizontal">

    <LinearLayout style="@style/MarketLine">
        <TextView
            style="@style/MarketTextTitle"
            android:text="上证指数"
            />
        <TextView
            android:id="@+id/tv_number"
            style="@style/MarketTextView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_number_num"
                style="@style/MarketTextView_Left" />

            <TextView
                android:id="@+id/tv_number_yield"
                style="@style/MarketTextView_Right" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout style="@style/MarketLine">
        <TextView
            style="@style/MarketTextTitle"
            android:text="深证成指"
            />
        <TextView
            android:id="@+id/tv_sz_number"
            style="@style/MarketTextView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sz_number_num"
                style="@style/MarketTextView_Left" />

            <TextView
                android:id="@+id/tv_sz_number_yield"
                style="@style/MarketTextView_Right" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout style="@style/MarketLine">
        <TextView
            style="@style/MarketTextTitle"
            android:text="创业板指"
            />
        <TextView
            android:id="@+id/tv_cy_number"
            style="@style/MarketTextView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cy_number_num"
                style="@style/MarketTextView_Left"
                android:text="45.44"
                />

            <TextView
                android:id="@+id/tv_cy_number_yield"
                android:text="13.28%"
                style="@style/MarketTextView_Right" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>