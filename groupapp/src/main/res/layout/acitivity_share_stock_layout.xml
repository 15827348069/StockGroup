<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/group_layout_background"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/share_bottom"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/share_content_layout"
        android:paddingTop="60dp"
        android:paddingBottom="60dp"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017年1月26日 10:00"
            android:id="@+id/tv_date"
            android:textSize="14dp"
            android:textColor="@color/black_33"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="推荐您关注股票"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/black_33"
            />
        <LinearLayout
            android:layout_width="277dp"
            android:layout_height="121dp"
            android:background="@drawable/icon_share_stock_top"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="15dp"
            android:layout_marginTop="30dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black_33"
                android:textSize="45dp"
                android:id="@+id/tv_stock_name"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_66"
                android:textSize="28dp"
                android:id="@+id/tv_stock_sybmol"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="277dp"
            android:layout_height="64dp"
            android:gravity="center"
            android:background="@drawable/icon_share_stock_bottom"
            >
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical"
              android:gravity="center"
              >
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="当前价"
                  android:textSize="12dp"
                  android:textColor="@color/black_99"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/black_66"
                  android:textSize="12dp"
                  android:id="@+id/tv_price"
                  />
          </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="涨幅"
                    android:textSize="12dp"
                    android:textColor="@color/black_99"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_66"
                    android:textSize="12dp"
                    android:id="@+id/tv_yield"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ydgl"
                    android:textSize="12dp"
                    android:textColor="@color/black_99"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_66"
                    android:textSize="12dp"
                    android:id="@+id/tv_vrsi"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qrld"
                    android:textSize="12dp"
                    android:textColor="@color/black_99"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_66"
                    android:textSize="12dp"
                    android:id="@+id/tv_ywpi"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="42dp"
            android:src="@drawable/icon_down_stock"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信扫描每日领取牛股"
            android:textColor="@color/black_33"
            android:textSize="16dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="由资本魔方网模型选股选出"
            android:textColor="@color/black_99"
            android:textSize="12dp"
            android:layout_marginTop="12dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风险提醒：数据仅供参考，请自主理性投资"
            android:textColor="@color/black_99"
            android:textSize="12dp"
            android:layout_marginTop="8dp"
            />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/share_bottom"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="邀请朋友"
        android:textColor="@color/black_33"
        android:textSize="12dp"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/button_select_tran"
            android:orientation="vertical"
            android:layout_weight="1"
            android:text="微信朋友圈"
            android:drawableTop="@drawable/wx_friend_circle"
            android:textSize="11sp"
            android:textColor="@color/item_message"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:id="@+id/share_wx_friend_circle"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:text="微信好友"
            android:gravity="center"
            android:drawableTop="@drawable/wx_friend"
            android:textSize="11sp"
            android:textColor="@color/item_message"
            android:drawablePadding="5dp"
            android:id="@+id/share_wx_friend"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/button_select_tran"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:text="新浪微博"
            android:gravity="center"
            android:drawableTop="@drawable/share_sina"
            android:textSize="11sp"
            android:textColor="@color/item_message"
            android:drawablePadding="5dp"
            android:id="@+id/share_sina"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/button_select_tran"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:text="QQ"
            android:drawableTop="@drawable/shareqq"
            android:textSize="11sp"
            android:textColor="@color/item_message"
            android:drawablePadding="5dp"
            android:id="@+id/share_qq"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/button_select_tran"
            />
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>