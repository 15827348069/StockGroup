<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/group_layout_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_layout_id"
        android:layout_above="@+id/add_fans_bottom_layout"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingBottom="25dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_video_name"
        android:textSize="18sp"
        android:textColor="@color/black_33"
        android:text="K线超级理论涨停比赚第一期学员专享学员"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="21dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主讲人:"
            android:textSize="12sp"
            android:textColor="@color/black_66"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="路西法"
            android:id="@+id/tv_video_teacher_name"
            android:textSize="12sp"
            android:textColor="@color/black_66"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程时间:"
                android:textSize="12sp"
                android:textColor="@color/black_66"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-12-12 12:12:12"
                android:id="@+id/tv_video_time"
                android:textSize="12sp"
                android:textColor="@color/black_66"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <View
                android:layout_width="3dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:background="@color/colorAccent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="请选择订阅课程方式"
                android:textColor="@color/black_33"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:layout_marginLeft="3dp"
                />

            <TextView
                android:id="@+id/tv_series"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="系列课程列表"
                android:textColor="@color/black_99"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/just_this_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/red_line_select">

            <ImageView
                android:id="@+id/just_this_check"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:background="@color/colorAccent"
                android:padding="3dp"
                android:src="@drawable/icon_check_ed_prive" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="仅订阅本期课程"
                        android:textColor="@color/black_33"
                        android:textSize="16sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/video_price"
                            android:text="100"
                            android:drawableLeft="@drawable/icon_mfb_red"
                            android:textColor="@color/black_33"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:id="@+id/video_new_price"
                            android:layout_marginLeft="5dp"
                            android:text="10"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp" />
                    </LinearLayout>
                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="订阅后可永久参与本直播课程及观看录播视频"
                    android:textColor="@color/black_99"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/series_layout"
            android:background="@drawable/red_line_select"
            >

            <ImageView
                android:id="@+id/series_check"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:background="@color/colorAccent"
                android:padding="3dp"
                android:src="@drawable/icon_check_ed_prive" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订阅系列课程"
                    android:textSize="16sp"
                    android:textColor="@color/black_33"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/series_price"
                        android:text="100"
                        android:drawableLeft="@drawable/icon_mfb_red"
                        android:textColor="@color/black_33"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:id="@+id/series_new_price"
                        android:layout_marginLeft="5dp"
                        android:text="10"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />
                </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_series_message"
                    android:text="@string/video_pecial"
                    android:textSize="16sp"
                    android:textColor="@color/black_33"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:textSize="12sp"
                    android:textColor="@color/black_99"
                    android:text="订阅后可永久参与本系列直播课程及观看录播视频"
                    />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/fans_layout"
            android:background="@drawable/red_line_select"
            >

            <ImageView
                android:id="@+id/fans_check"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:background="@color/colorAccent"
                android:padding="3dp"
                android:visibility="gone"
                android:src="@drawable/icon_check_ed_prive" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/video_fans"
                    android:id="@+id/tv_fans_group_name"
                    android:textSize="16sp"
                    android:textColor="@color/black_33"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/fans_price"
                    android:text="100"
                    android:drawableLeft="@drawable/icon_mfb_red"
                    android:textColor="@color/black_33"
                    android:textSize="16sp" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:textSize="12sp"
                    android:textColor="@color/black_99"
                    android:text="订阅后可永久参与本圈子直播课程及观看录播视频"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/add_fans_bottom_layout"
        android:background="@color/linen"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/add_fans_bottom_layout"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:paddingLeft="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额："
                android:textColor="@color/black"
                android:textSize="@dimen/live_text_size_min_small"
                />
            <TextView
                android:id="@+id/my_tv_mfb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_mfb_red"
                android:drawablePadding="6dp"
                android:textColor="#666666"
                android:lines="1"
                android:textSize="@dimen/live_text_size_min_small"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sure_add_fans_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_weight="2"
            android:background="@drawable/button_select"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/add_fans_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去充值"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <LinearLayout
                android:id="@+id/add_fans_pay_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="需充值"
                    android:textColor="#f5aeae"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/need_pay_mfb_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="#f5aeae"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="魔方宝"
                    android:textColor="#f5aeae"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>