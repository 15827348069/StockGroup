<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_share"
    android:orientation="horizontal"
    android:visibility="visible"
    android:layout_alignParentBottom="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/share_wx_friend_circle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/icon_share_pyq"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="微信朋友圈"
        android:textColor="@color/white"
        android:textSize="11sp" />

    <Button
        android:id="@+id/share_wx_friend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/icon_share_weixin"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="微信好友"
        android:textColor="@color/white"
        android:textSize="11sp" />

    <Button
        android:id="@+id/share_sina"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/icon_share_xinlang"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="新浪微博"
        android:textColor="@color/white"
        android:textSize="11sp" />

    <Button
        android:id="@+id/share_qq"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/icon_share_qq"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="QQ"
        android:textColor="@color/white"
        android:textSize="11sp" />
</LinearLayout>