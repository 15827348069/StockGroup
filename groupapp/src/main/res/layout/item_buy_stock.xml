<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imv_left_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_stock_j" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imv_left_id"
            android:background="@drawable/icon_stock_b"
            android:paddingRight="15dp">

            <LinearLayout
                android:id="@+id/ll_price_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_stock_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="588"
                        android:textColor="@color/red"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="魔方宝"
                        android:textColor="@color/black_33"
                        android:textSize="14sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_stock_m_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_stock_price"
                    android:text="（月均522）"
                    android:textColor="@color/black_99"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ll_price_layout"
                android:src="@drawable/icon_stock_coupons" />

            <ImageView
                android:id="@+id/screen_price_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/stock_checked" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_screen_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:text="到期时间：2017年10月18日"
        android:textColor="@color/black_99"
        android:textSize="14sp" />
</LinearLayout>