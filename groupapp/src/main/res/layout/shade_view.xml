<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shade_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_t80"
    android:paddingBottom="@dimen/dp_15"
    android:paddingTop="@dimen/dp_15"
    android:visibility="gone">

        <TextView
            android:id="@+id/open_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/open_vip_tip"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"/>

        <TextView
            android:id="@+id/firstAddTv"
            android:layout_below="@+id/open_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/open_vip_tip"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"/>

        <Button
            android:id="@+id/openVIPBtn"
            android:layout_below="@+id/firstAddTv"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:background="@drawable/submit_stock_btn"
            android:text="加入会员"
            android:textColor="@color/white"/>

</RelativeLayout>