<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/group_layout_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.zbmf.StockGroup.view.PullToRefreshListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/group_layout_background"
        android:dividerHeight="10dp"
        android:id="@+id/video_teacher_list"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/no_video_message"
        android:textSize="15sp"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/black_66"
        android:text="没有找到相关视频"
        />
    </RelativeLayout>
</LinearLayout>