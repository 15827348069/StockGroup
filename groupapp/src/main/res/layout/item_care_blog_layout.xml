<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_select"
    android:orientation="vertical">

    <TextView
        android:id="@+id/head_message_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:lineSpacingExtra="5dp"
        android:lineSpacingMultiplier="1"
        android:maxLines="2"
        android:minLines="2"
        android:ellipsize="end"
        android:textColor="@color/black_33"
        android:textSize="@dimen/blog_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
    >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.zbmf.StockGroup.view.RoundedCornerImageView
                android:id="@+id/head_message_avatar"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/avatar_default"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/head_message_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_66"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/head_message_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:textColor="#b0b0b0"
                android:textSize="11sp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/head_message_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/icon_look_number"
            android:drawablePadding="4dp"
            android:textColor="@color/black_66"
            android:text="123"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>