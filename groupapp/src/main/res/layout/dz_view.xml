<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomTab"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_45"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:background="@color/spinner_bg_color"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/dp_70"
    android:paddingStart="@dimen/dp_85">

    <TextView
        android:id="@+id/dz_tv_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="@dimen/dp_3"
        android:drawableStart="@drawable/not_dz_icon"
        android:gravity="center_vertical"
        android:text="点赞"
        android:textColor="@color/pick_red"
        android:textSize="@dimen/sp_16"/>

    <TextView
        android:id="@+id/pl_tv_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_weight="1"
        android:drawablePadding="@dimen/dp_3"
        android:drawableStart="@drawable/comment_icon"
        android:gravity="center_vertical"
        android:text="评论"
        android:textColor="@color/pick_red"
        android:textSize="@dimen/sp_16"/>
</LinearLayout>