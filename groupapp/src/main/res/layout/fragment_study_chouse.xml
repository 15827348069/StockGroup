<?xml version="1.0" encoding="utf-8"?>
<com.zbmf.StockGroup.view.PullToRefreshScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pull_to_refresh_scrollview"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible"
        android:orientation="vertical"
        android:paddingBottom="25dp"
        android:paddingTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_living"
            android:text="正在直播"
            android:paddingLeft="15dp"
            android:textColor="@color/black_33"
            android:textSize="20dp"
            android:visibility="gone"
            android:textStyle="bold" />

        <com.zbmf.StockGroup.view.ListViewForScrollView
            android:id="@+id/list_live"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/transparent"
            android:layout_marginTop="15dp"
            android:dividerHeight="0dp"
            android:visibility="gone"
            android:layout_marginBottom="35dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精选课程"
                android:textColor="@color/black_33"
                android:layout_centerVertical="true"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_all_video"
                android:text="更多"
                android:textSize="12dp"
                android:textColor="@color/black_99"
                />
        </RelativeLayout>
        <com.zbmf.StockGroup.view.GridViewForScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/grid_view_chouse"
            android:gravity="center"
            android:numColumns="2"
            android:stretchMode="columnWidth"
            android:scrollbars="none"
            />
        <include layout="@layout/study_blog_layout"/>
        <TextView
            android:id="@+id/tv_search"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape_layout_search_white"
            android:drawableLeft="@drawable/icon_search_big"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:hint="输入关键词搜索"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/black_33"
            android:textColorHint="@color/black_99"
            android:textSize="13dp" />
    </LinearLayout>
</com.zbmf.StockGroup.view.PullToRefreshScrollView>