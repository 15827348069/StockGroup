<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="30dp"
              android:layout_marginRight="30dp"
              android:layout_marginTop="30dp"
              android:orientation="vertical"
    >

    <EditText
        android:id="@+id/ed_phone1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_layout_black"
        android:drawableLeft="@drawable/shouji"
        android:drawablePadding="15dp"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="#989898"
        android:textSize="15sp"
        android:textCursorDrawable="@drawable/edit_color"
        />

    <TextView
        android:id="@+id/tv_phone_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="11dp"
        android:padding="5dp"
        android:text="手机号格式错误"
        android:textColor="#80cc2525"
        android:visibility="invisible"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <EditText
            android:id="@+id/ed_yzm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_layout_black"
            android:drawableLeft="@drawable/yzm"
            android:drawablePadding="15dp"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="#989898"
            android:textSize="15sp"
            android:textCursorDrawable="@drawable/edit_color"
            />

        <TextView
            android:id="@+id/tv_yzm"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_select_59t"
            android:gravity="center"
            android:textColor="#9b9191"
            android:text="获取验证码"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_yzm_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="11dp"
        android:padding="5dp"
        android:text="验证码错误"
        android:textColor="#80cc2525"
        android:visibility="invisible"
        />

    <EditText
        android:id="@+id/ed_pwd1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_layout_black"
        android:drawableLeft="@drawable/pwd"
        android:drawablePadding="15dp"
        android:hint="请输入6-18位数字和字母组合"
        android:inputType="textPassword"
        android:maxLength="18"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="#989898"
        android:textSize="15sp"
        android:textCursorDrawable="@drawable/edit_color"
        />

    <TextView
        android:id="@+id/tv_pwd_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:padding="5dp"
        android:text="密码格式错误"
        android:textColor="#80cc2525"
        android:visibility="invisible"
        />
</LinearLayout>