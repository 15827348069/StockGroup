<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="20dp"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/ed_phone1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_layout_line_gray_3dp"
        android:drawableLeft="@drawable/shouji"
        android:drawablePadding="15dp"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:textColor="@color/black_33"
        android:textColorHint="@color/black_99"
        android:textCursorDrawable="@drawable/edit_color"
        android:textSize="15sp" />
        <ImageView
            android:id="@+id/clear3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/cancel"
            android:visibility="gone"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_phone_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="11dp"
        android:text="手机号格式错误"
        android:textColor="#80cc2525"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <EditText
            android:id="@+id/ed_yzm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_layout_line_gray_3dp"
            android:drawableLeft="@drawable/yzm"
            android:drawablePadding="15dp"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/black_33"
            android:textColorHint="@color/black_99"
            android:textCursorDrawable="@drawable/edit_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_yzm"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_select_round_gray_right"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_yzm_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="11dp"
        android:text="验证码错误"
        android:textColor="#80cc2525"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/ed_pwd1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_layout_line_gray_3dp"
        android:drawableLeft="@drawable/pwd"
        android:drawablePadding="15dp"
        android:hint="请输入8-18位数字和字母组合"
        android:inputType="textPassword"
        android:maxLength="18"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:textColor="@color/black_33"
        android:textColorHint="@color/black_99"
        android:textCursorDrawable="@drawable/edit_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_pwd_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:padding="5dp"
        android:text="密码格式错误"
        android:textColor="#80cc2525"
        android:visibility="invisible" />
</LinearLayout>