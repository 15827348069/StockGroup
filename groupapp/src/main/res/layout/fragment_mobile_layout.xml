<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_play"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@color/white"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/video_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black_t80"
        >
        <RelativeLayout
            android:id="@+id/playerTopLayout"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:background="@drawable/play_top_bg"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/backPlayList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:paddingLeft="15dp"
                android:src="@drawable/icon_video_back" />

            <ImageView
                android:id="@+id/iv_top_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_video_share" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true"
            >
            <TextView
                android:id="@+id/tv_video_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="路西法 今日视频小何"
                android:textColor="@color/white"
                android:textSize="15sp" />
        <TextView
            android:id="@+id/iv_center_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:layout_marginTop="25dp"
            android:padding="10dp"
            android:textSize="13sp"
            android:text="您正在使用非WIFI网络,播放将消耗流量费用"
            android:textColor="@color/white"
            android:visibility="visible" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/iv_center_play"
                android:layout_marginTop="5dp"
                android:text="继续播放"
                android:textSize="13sp"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/icon_start_play"
                android:textColor="@color/white"
                android:background="@drawable/button_select_r20"
                />
        </LinearLayout>
    </RelativeLayout>

