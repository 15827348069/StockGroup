<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
 >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/button_select_tran"
            android:orientation="vertical"
            android:layout_weight="1"
            android:text="微信朋友圈"
            android:drawableTop="@drawable/wx_friend_circle"
            android:textSize="11sp"
            android:textColor="@color/item_message"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:id="@+id/share_wx_friend_circle"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:text="微信好友"
            android:gravity="center"
            android:drawableTop="@drawable/wx_friend"
            android:textSize="11sp"
            android:textColor="@color/item_message"
            android:drawablePadding="5dp"
            android:id="@+id/share_wx_friend"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/button_select_tran"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:text="新浪微博"
            android:gravity="center"
            android:drawableTop="@drawable/share_sina"
            android:textSize="11sp"
            android:textColor="@color/item_message"
            android:drawablePadding="5dp"
            android:id="@+id/share_sina"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/button_select_tran"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:text="QQ"
            android:drawableTop="@drawable/shareqq"
            android:textSize="11sp"
            android:textColor="@color/item_message"
            android:drawablePadding="5dp"
            android:id="@+id/share_qq"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/button_select_tran"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/linen"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/cause_share"
        android:text="取消分享"
        android:textColor="#999999"
        style="@style/ButtonStyle"
        android:background="@drawable/button_select_tran"
        />
</LinearLayout>
