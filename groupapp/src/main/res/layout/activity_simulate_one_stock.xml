<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">
    <!-- 个股页面中头部买入布局-->
    <include layout="@layout/title_layout" />

    <com.zbmf.StockGroup.view.PullToRefreshScrollView
        android:id="@+id/mPullToRefreshScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@+id/title_layout_id">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <!--<include layout="@layout/stock_title_layout"/>-->
            <!--<include layout="@layout/simulate_one_stock_layout"/>-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <include layout="@layout/no_message" />

                <com.zbmf.StockGroup.view.ListViewForScrollView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:cacheColorHint="#00000000"
                    android:divider="@color/transparent"
                    android:dividerHeight="10dp"
                    android:listSelector="#00000000"></com.zbmf.StockGroup.view.ListViewForScrollView>
            </RelativeLayout>
        </LinearLayout>
    </com.zbmf.StockGroup.view.PullToRefreshScrollView>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#f5f5f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#f1f1f1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:background="@drawable/one_stock_commit_bg"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="发表个股评论和投资理念..."
                android:textAppearance="@style/TextAppear.Theme.C_Size13"
                android:textColor="#cccccc"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="分享"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
