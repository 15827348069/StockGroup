<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/group_layout_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/videoplay_framelayout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/black_t80"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/linen"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/time_layout"
            android:layout_centerVertical="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_video_time"
                android:textColor="@color/black_33"
                android:textSize="16sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/video_price"
                android:text="100"
                android:drawableLeft="@drawable/icon_mfb_red"
                android:textColor="@color/black_33"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/video_new_price"
                android:layout_marginLeft="5dp"
                android:text="10"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/linen"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="15dp"
        android:visibility="gone"
        android:text="订阅课程"
        android:textSize="16sp"
        android:id="@+id/submit_video"
        android:background="@drawable/button_select"
        />
    </LinearLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:id="@+id/radio_video"
        android:background="@color/white"
        >
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="课程介绍"
            android:id="@+id/rb_desc"
            android:textSize="16sp"
            android:checked="true"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/text_select_color"
            />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/rb_chat"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="群聊"
            android:gravity="center"
            android:button="@null"
            android:textColor="@drawable/text_select_color"
            />
    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/linen"/>
    <FrameLayout
        android:id="@+id/video_framelayout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
       />
</LinearLayout>