<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/group_layout_background"
    android:orientation="vertical"
    tools:context="com.zbmf.StockGroup.activity.SettingActivity">

    <include layout="@layout/title_layout"/>

    <ScrollView
        android:id="@+id/sc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_layout_id">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="账户"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e3e3e3"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/text_select_tran"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="修改密码"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e3e3e3"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/text_select_tran"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="修改手机号"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e3e3e3"
                />

            <TextView
                android:id="@+id/tv_bind"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/text_select_tran"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="绑定设置"
                android:textColor="@color/black"
                android:textSize="14sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="推送"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e3e3e3"
                android:visibility="gone"
                />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_live"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/text_select_tran"
                android:checked="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="直播室"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="gone"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e3e3e3"
                android:visibility="gone"
                />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_group"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/text_select_tran"
                android:checked="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="群聊"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="gone"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e3e3e3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="工具"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <View android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e3e3e3"
                />

            <TextView android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/text_select_tran"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="字号调整"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e3e3e3"
                />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_music"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/text_select_tran"
                android:checked="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="声音"
                android:textColor="@color/black"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e3e3e3"
                />

            <TextView
                android:id="@+id/tv_clear"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/text_select_tran"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="清除缓存"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e3e3e3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="系统"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e3e3e3"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/text_select_tran"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="意见反馈"
                android:id="@+id/yj_back"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e3e3e3"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/text_select_tran"
                android:orientation="horizontal"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:clickable="true" android:id="@+id/tv_check"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="检查新版本"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

                <TextView android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="炒股圈子1.0.0"
                    android:textColor="#8e8e93"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e3e3e3"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/text_select_tran"
                android:clickable="true"
                android:gravity="center_vertical"
                android:id="@+id/about_us"
                android:paddingLeft="16dp"
                android:text="关于我们"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="80dp"
                android:background="#e3e3e3"
                />

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_select"
                android:text="退出登录"
                android:textColor="@color/white"
                android:textSize="16dp"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
