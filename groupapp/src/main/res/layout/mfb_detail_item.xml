<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="11dp"
    android:paddingBottom="12dp"
    android:background="@drawable/list_item_select"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:id="@+id/mfb_date"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06-27"
            android:textSize="14sp"
            android:textColor="@color/black_99"
            android:id="@+id/item_mfb_month"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_mfb_day"
            android:layout_marginTop="9dp"
            android:textSize="14sp"
            android:textColor="@color/black_99"
            android:text="05:55"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/mfb_date"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/shape_mfb_type_ff8989"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:maxLength="2"
            android:id="@+id/item_mfb_type"
            />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:text="+20 魔方宝"
            android:textColor="#333333"
            android:id="@+id/item_mfb_count"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="销售收入20魔方宝"
            android:maxLines="2"
            android:textSize="12sp"
            android:textColor="#999999"
            android:id="@+id/item_mfb_desc"
            />
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>