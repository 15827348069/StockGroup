<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_pc_live_top_layout"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="220dp">
        <TextureView
            android:id="@+id/textureview_pc_live_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/video_img"
            />
        <RelativeLayout
            android:id="@+id/playerTopLayout"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:background="@drawable/play_top_bg"
            android:orientation="horizontal"
            android:visibility="visible">
            <ImageView
                android:id="@+id/backPlayList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:paddingLeft="15dp"
                android:src="@drawable/icon_video_back" />
            <ImageView
                android:id="@+id/iv_top_menu"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_video_share" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_center_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/smallbegin_ic"
            android:visibility="visible" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:id="@+id/replay_play_icon"
                android:layout_marginLeft="10dp"
                android:src="@drawable/replay_play_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/replay_full_screen"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/replay_fullscreen_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <ProgressBar
            android:layout_centerInParent="true"
            style="@style/CustomDialog"
            android:indeterminateTint="#99FFFFFF"
            android:indeterminateTintMode="src_atop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/pc_portrait_progressBar" />
    </RelativeLayout>
</LinearLayout>