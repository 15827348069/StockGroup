<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/group_layout_background"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <AutoCompleteTextView
        android:id="@+id/et_input_stock"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:hint="请输入股票代码/名称/首字母"
        android:paddingLeft="15dp"
        android:textColor="@color/black_33"
        android:textColorHint="@color/black_99"
        android:textSize="14sp"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/et_input_content"
        android:completionThreshold="1"
        android:dropDownWidth="match_parent"
        android:dropDownHeight="180dp"
        android:popupBackground="@color/transparent"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="top"
            android:hint="请详细描述您的问题"
            android:maxLength="140"
            android:padding="15dp"
            android:textColor="@color/black_33"
            android:textColorHint="@color/black_99"
            android:textSize="14sp"
            android:id="@+id/et_input_content"
            />

        <TextView
            android:id="@+id/tv_input_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:text="0/140"
            android:textColor="@color/black_66"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>