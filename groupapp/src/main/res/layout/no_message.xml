<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_none"
    android:background="@color/white"
    android:layout_below="@+id/title_layout_id"
    android:visibility="gone"
 >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="80dp"
        android:paddingBottom="40dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_no_message"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:id="@+id/no_message_text"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="15sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="找老师"
                android:background="@drawable/shape_layout_line_gray_15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/black_99"
                android:gravity="center"
                android:visibility="gone"
                android:id="@+id/tv_left_button"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:visibility="gone"
                android:gravity="center"
                android:text="铁粉优惠"
                android:background="@drawable/button_background"
                android:id="@+id/tv_right_button"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>