<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e3e3e3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/group_main_munu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/home_menu"
                style="@style/main_menu"
                android:checked="true"
                android:drawableTop="@drawable/home_drawable"
                android:text="首页" />

            <RadioButton
                android:id="@+id/care_menu"
                style="@style/main_menu"
                android:drawableTop="@drawable/care_drawable"
                android:text="圈子" />

            <!--<RadioButton-->
                <!--android:id="@+id/study_menu"-->
                <!--style="@style/main_menu"-->
                <!--android:drawableTop="@drawable/xueyuan_drawable"-->
                <!--android:text="学院" />-->

            <RadioButton
                android:id="@+id/my_detail"
                style="@style/main_menu"
                android:drawableTop="@drawable/my_detail_munu_drawable"
                android:text="个人" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:gravity="right">

                <TextView
                    android:id="@+id/home_menu_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/red_point_bg"
                    android:text="123"
                    android:textColor="@color/colorAccent"
                    android:textSize="9sp"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:gravity="right">

                <TextView
                    android:id="@+id/care_menu_point"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="28dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/red_point_bg"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    android:visibility="invisible" />
            </LinearLayout>

            <!--<LinearLayout-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:focusable="false"-->
                <!--android:gravity="right"-->
                <!--android:visibility="visible">-->

                <!--<TextView-->
                    <!--android:id="@+id/study_menu_point"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginRight="20dp"-->
                    <!--android:layout_marginTop="5dp"-->
                    <!--android:background="@drawable/red_point_bg"-->
                    <!--android:textColor="@color/colorAccent"-->
                    <!--android:textSize="9sp"-->
                    <!--android:visibility="invisible" />-->
            <!--</LinearLayout>-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:gravity="right">

                <ImageView
                    android:id="@+id/my_detail_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/icon_message_point"
                    android:textSize="9sp"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>