<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.zbmf.StockGroup.activity.VipActivity">

    <include layout="@layout/title_layout"/>

    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_85"
            android:layout_gravity="center"
            android:background="@drawable/title_background"
            android:gravity="center"
            android:text="@string/join_vip_title"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/r0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:id="@+id/l0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7.5"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_5">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/serve0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_5"
                                android:padding="@dimen/dp_3"
                                android:text="VIP话题讨论"
                                android:textColor="@color/black_33"
                                android:textSize="@dimen/sp_16"/>

                            <TextView
                                android:id="@+id/mark"
                                android:layout_width="@dimen/dp_14"
                                android:layout_height="@dimen/dp_14"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_5"
                                android:text="1"
                                android:gravity="center"
                                android:textSize="@dimen/sp_11"
                                android:textColor="@color/white"
                                android:background="@drawable/tv_circle_bg"
                               android:visibility="gone"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/value0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:padding="@dimen/dp_3"
                            android:text="VIP精选内容分享"
                            android:textColor="@color/red"
                            android:textSize="@dimen/sp_14"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/enter0"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_weight="2.5"
                        android:background="@drawable/vip_enter_btn_bg"
                        android:text="@string/enter"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/sp_16"
                        tools:ignore="RtlHardcoded"/>
                </LinearLayout>

                <View
                    android:id="@+id/line0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/r0"
                    android:background="#f6f6f6"
                    />

                <LinearLayout
                    android:id="@+id/r1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line0"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:id="@+id/l1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7.5"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_5">

                        <TextView
                            android:id="@+id/serve1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:padding="@dimen/dp_3"
                            android:text="智能选股(九天揽月)免费体验一年"
                            android:textColor="@color/black_33"
                            android:textSize="@dimen/sp_16"/>

                        <TextView
                            android:id="@+id/value1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:padding="@dimen/dp_3"
                            android:text="价值7056魔方宝"
                            android:textColor="@color/red"
                            android:textSize="@dimen/sp_14"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/enter1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_weight="2.5"
                        android:background="@drawable/vip_enter_btn_bg"
                        android:text="@string/enter"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/sp_16"
                        tools:ignore="RtlHardcoded"/>
                </LinearLayout>

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/r1"
                    android:background="#f6f6f6"
                    />

                <LinearLayout
                    android:id="@+id/r2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line1"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:id="@+id/l2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7.5"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_5">

                        <TextView
                            android:id="@+id/serve2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:padding="@dimen/dp_3"
                            android:text="铁粉6.5折折扣券x2"
                            android:textColor="@color/black_33"
                            android:textSize="@dimen/sp_16"/>

                        <TextView
                            android:id="@+id/value2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:padding="@dimen/dp_3"
                            android:text="价值3600魔方宝"
                            android:textColor="@color/red"
                            android:textSize="@dimen/sp_14"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/enter2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_weight="2.5"
                        android:background="@drawable/vip_enter_btn_bg"
                        android:text="@string/enter"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/sp_16"
                        tools:ignore="RtlHardcoded"/>
                </LinearLayout>

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/r2"
                    android:background="#f6f6f6"
                    />

                <LinearLayout
                    android:id="@+id/r3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line2"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:id="@+id/l3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7.5"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_5">

                        <TextView
                            android:id="@+id/serve3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:padding="@dimen/dp_3"
                            android:text="选股大赛个股查看权"
                            android:textColor="@color/black_33"
                            android:textSize="@dimen/sp_16"/>

                        <TextView
                            android:id="@+id/value3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:padding="@dimen/dp_3"
                            android:text="非会员只能查看第三名以后的个股"
                            android:textColor="@color/red"
                            android:textSize="@dimen/sp_14"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/enter3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_weight="2.5"
                        android:background="@drawable/vip_enter_btn_bg"
                        android:text="@string/enter"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/sp_16"
                        tools:ignore="RtlHardcoded"/>
                </LinearLayout>

                <View
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/r3"
                    android:background="#f6f6f6"
                    />

                <LinearLayout
                    android:id="@+id/r4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line3"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:id="@+id/l4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7.5"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_5">

                        <TextView
                            android:id="@+id/serve4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:padding="@dimen/dp_3"
                            android:text="模拟交易排行榜前500名查看特权"
                            android:textColor="@color/black_33"
                            android:textSize="@dimen/sp_16"/>

                        <TextView
                            android:id="@+id/value4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:padding="@dimen/dp_3"
                            android:text="非会员只可看前10名"
                            android:textColor="@color/red"
                            android:textSize="@dimen/sp_14"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/enter4"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_weight="2.5"
                        android:background="@drawable/vip_enter_btn_bg"
                        android:text="@string/enter"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/sp_16"
                        tools:ignore="RtlHardcoded"/>
                </LinearLayout>

                <View
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/r4"
                    android:background="#f6f6f6"
                    />

                <LinearLayout
                    android:id="@+id/llMore"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:layout_below="@+id/line4"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_3">

                    <TextView
                        android:id="@+id/serve5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_5"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="@dimen/dp_3"
                        android:text="更多功能敬请期待"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/sp_16"/>

                </LinearLayout>

                <View
                    android:id="@+id/line5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/llMore"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="#f6f6f6"
                    />


                <TextView
                    android:id="@+id/tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:text="@string/vip_tip"
                    android:textColor="@color/black_cc"
                    android:textSize="@dimen/sp_13"/>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/bottomTab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/vip_btn_color"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bottomMFB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_12"
                    android:text="魔方宝900/年"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/sp_16"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bottomMFB"
                    android:layout_marginStart="@dimen/dp_12"
                    android:text="有效期至2019-05-24"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>

            <Button
                android:id="@+id/subscribeVIPBtn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/title_background"
                android:paddingLeft="@dimen/dp_9"
                android:paddingRight="@dimen/dp_9"
                android:text="立即开通"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"/>
        </RelativeLayout>
    </RelativeLayout>

    <!--</ScrollView>-->


</LinearLayout>
