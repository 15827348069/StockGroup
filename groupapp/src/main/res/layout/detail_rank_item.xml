<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:orientation="vertical">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/stockName"
            style="@style/detail_tv_style"
            android:padding="@dimen/dp_2"
            android:text="澄星股份"
            android:textColor="@color/black_33"/>

        <TextView
            android:id="@+id/riskSize"
            style="@style/detail_tv_style"
            android:padding="@dimen/dp_2"
            android:text="+2.5%"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/totalRiskSize"
            style="@style/detail_tv_style"
            android:padding="@dimen/dp_2"
            android:text="+1.89%"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/weekRank"
            style="@style/detail_tv_style"
            android:padding="@dimen/dp_2"
            android:text="12"
            android:textColor="@color/black_33"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <ImageView
            android:id="@+id/share_stock_model"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="@dimen/dp_12"
            android:src="@drawable/share_stock_model"/>
        <TextView
            android:id="@+id/stockSymbol"
            style="@style/detail_tv_style"
            android:padding="@dimen/dp_1"
            android:text="890424"
            android:textColor="@color/black_33"
            android:textSize="@dimen/sp_12"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.4"/>

        <TextView
            android:id="@+id/time"
            style="@style/detail_tv_style"
            android:padding="@dimen/dp_2"
            android:layout_gravity="end"
            android:text="2018-09-12~2018-09-12"
            android:textColor="@color/black_33"
            android:textSize="@dimen/sp_12"
            android:layout_width="0dp"
            android:layout_weight="2.0"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"/>
        <TextView
            android:id="@+id/qi"
            android:padding="@dimen/dp_3"
            android:text="(第22期)"
            android:textColor="@color/black_33"
            android:layout_width="0dp"
            android:textSize="@dimen/sp_10"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <!--</LinearLayout>-->
    <TextView
        android:textColor="@color/black_33"
        android:textSize="@dimen/sp_13"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:background="@drawable/select_stock_tv_bg"
        android:padding="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/comment"/>
</LinearLayout>