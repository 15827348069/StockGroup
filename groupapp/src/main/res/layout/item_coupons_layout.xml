<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@+id/ly_coupons_rule"
        android:background="@drawable/icon_coupons_o">
        <ImageView
            android:id="@+id/imv_coupons_avatar"
            android:layout_width="@dimen/teacher_avatar"
            android:layout_height="@dimen/teacher_avatar"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/avatar_default" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imv_coupons_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_coupons_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全站通用全站通用全站通用全站通用全站通用"
                android:textColor="@color/black_33"
                android:textSize="16sp"
                android:singleLine="true"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/tv_coupons_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="满1000减3000"
                android:textColor="@color/black_66"
                android:textSize="14sp"
                android:singleLine="true"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/tv_coupons_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017.08.31前有效"
                android:textColor="@color/black_99"
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imv_coupons_kind"
            android:src="@drawable/icon_coupons_y"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/coupons_select"
            android:layout_alignParentRight="true"
            android:id="@+id/imv_coupons_take"
            android:visibility="gone"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/coupons_checked"
        android:id="@+id/ly_coupons_rule"
        android:gravity="right|center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/tv_coupons_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_coupons_mfb"
            android:drawablePadding="5dp"
            android:text="3000"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_coupons_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="满3个月使用"
            android:textColor="@color/white"
            android:textSize="11sp" />
    </LinearLayout>
</RelativeLayout>