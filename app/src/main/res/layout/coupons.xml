<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        android:id="@+id/coupons_countent_layout"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coupons_icon"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_coupon_manjian"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/coupons_icon"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:id="@+id/coupons_layout"
            android:layout_centerVertical="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coupons_name"
                android:text="涨停王者铁粉服务"
                android:textColor="@color/black"
                android:textSize="18dp"
                />
            <com.zbmf.groupro.view.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coupons_title"
                android:text="订阅6个月送一个月"
                android:textSize="13dp"
                android:textColor="#666666"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coupons_date"
                android:text="2017-12-12"
                android:textSize="13dp"
                android:textColor="@color/item_message"
                />
        </LinearLayout>
        <CheckBox
            android:layout_width="78dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:text="已领取"
            android:checked="true"
            android:textColor="@color/white"
            android:background="@drawable/coupons_button"
            android:button="@null"
            android:gravity="center"
            android:id="@+id/clcil_coupons"
            android:layout_marginTop="43dp"
            />
        </RelativeLayout>
    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/coupons_select"
        android:layout_alignParentRight="true"
        android:id="@+id/aleady_have"
        />
</RelativeLayout>