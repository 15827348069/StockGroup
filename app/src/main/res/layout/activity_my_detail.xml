<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/group_layout_background"
    tools:context="com.zbmf.groupro.activity.MyDetailActivity">
    <include layout="@layout/activity_group_title_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:id="@+id/change_user_avatar_id"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="头像"
            />
        <com.zbmf.groupro.view.RoundedCornerImageView
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/avatar_default"
            android:id="@+id/my_detail_avatar_id"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/linen"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/my_detail_nickname_layout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="昵称"
            android:id="@+id/nickname_text"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#999999"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColorHint="#999999"
            android:gravity="right"
            android:layout_toRightOf="@+id/nickname_text"
            android:imeOptions="actionDone"
            android:id="@+id/my_detail_nickname"
            android:background="@color/transparent"
            android:textCursorDrawable="@drawable/edit_color"
            />
        </RelativeLayout>
</LinearLayout>
