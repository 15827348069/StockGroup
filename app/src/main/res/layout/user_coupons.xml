<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/list_item_select"
            android:id="@+id/coupons_countent_layout"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@color/colorAccent"
                android:src="@drawable/icon_check_ed_prive"
                android:layout_alignParentRight="true"
                android:id="@+id/coupons_check"
                android:padding="3dp"
                />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_coupon_manjian"
            android:id="@+id/coupons_icon"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/coupons_icon"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coupons_name"
                android:text="涨停王者铁粉服务"
                android:textColor="@color/black"
                android:textSize="18dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coupons_title"
                android:text="订阅6个月送一个月"
                android:textSize="13dp"
                android:textColor="#666666"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coupons_group_name"
                android:textSize="13dp"
                android:textColor="#666666"
                android:visibility="gone"
                android:lines="1"
                android:maxLength="8"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coupons_date"
                android:textSize="13dp"
                android:textColor="#666666"
                />
            </LinearLayout>
        </LinearLayout>
        </RelativeLayout>
</RelativeLayout>