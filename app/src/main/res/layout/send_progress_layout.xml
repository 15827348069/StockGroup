<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible"
        android:background="@color/white"
        android:id="@+id/send_gift_layout_id"
        >
    <ImageView
        android:id="@+id/iv_back1"
        android:src="@drawable/pull_back"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <ImageView
        android:id="@+id/iv_back2"
        android:src="@drawable/pull_back"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <RelativeLayout
        android:id="@+id/gift_progress_layout"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_rider"
            android:background="@drawable/pull_rider"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="18dp"
            />
        <ImageView
            android:id="@+id/wheel1"
            android:background="@drawable/pull_wheel"
            android:layout_marginTop="37dp"
            android:layout_width="5dp"
            android:layout_height="5dp" />
        <ImageView
            android:id="@+id/wheel2"
            android:layout_marginLeft="15dp"
            android:background="@drawable/pull_wheel"
            android:layout_marginTop="37dp"
            android:layout_width="5dp"
            android:layout_height="5dp" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/ivsun"
        android:layout_toRightOf="@+id/gift_progress_layout"
        android:background="@drawable/pull_sun"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="15dp"
        android:layout_height="15dp" />
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#999999"
        android:text="加载更多数据"
        android:id="@+id/add_more"
        style="@style/ButtonStyle"
        android:visibility="gone"
        />
</RelativeLayout>