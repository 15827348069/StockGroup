<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/rl_root"
    android:background="@drawable/list_item_select"
    android:padding="15dp"
    >
    <com.zbmf.groupro.view.RoundedCornerImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/avatar_default"
        android:id="@+id/recommend_item_avatar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/recommend_item_avatar"
        android:layout_marginLeft="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recommend_item_name"
                android:text="首山"
                android:textSize="15sp"
                android:textColor="#666666"
                android:layout_centerVertical="true"
                />
            <CheckBox
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:text="关注"
                android:focusable="false"
                android:textSize="11sp"
                android:checked="false"
                android:textColor="@color/white"
                android:background="@drawable/coupons_button"
                android:button="@null"
                android:gravity="center"
                android:id="@+id/recommend_item_button"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#999999"
            android:textSize="13sp"
            android:id="@+id/recommend_item_desc"
            android:text="新浪名博，多次参加炒股比萨i获得有一场及的新浪名将，并获得优异成绩"
            />
    </LinearLayout>
</RelativeLayout>