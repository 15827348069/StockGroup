<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginTop="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:drawableLeft="@drawable/my_detail_ding"
        android:drawableRight="@drawable/arrow_right"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="订阅"
        android:textSize="15sp"
        android:textColor="#333333"
        android:drawablePadding="14dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/button_select_tran"
        android:id="@+id/my_detail_dingyue_button"
        style="@style/ButtonStyle"
        />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="1"
            android:background="@drawable/icon_message_point"
            android:textSize="9sp"
            android:layout_alignParentRight="true"
            android:id="@+id/my_dingyue_point"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f6f6f6"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:drawableLeft="@drawable/my_detail_blog"
        android:drawableRight="@drawable/arrow_right"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/blog_name"
        android:textSize="15sp"
        android:textColor="#333333"
        android:drawablePadding="14dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/button_select_tran"
        android:id="@+id/my_detail_blog_button"
        style="@style/ButtonStyle"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f6f6f6"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:drawableLeft="@drawable/my_detail_shouc"
            android:drawableRight="@drawable/arrow_right"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="收藏"
            android:textSize="15sp"
            android:textColor="#333333"
            android:drawablePadding="14dp"
            android:gravity="left|center_vertical"
            android:background="@drawable/button_select_tran"
            android:id="@+id/my_detail_shouc_button"
            style="@style/ButtonStyle"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="1"
            android:background="@drawable/icon_message_point"
            android:textSize="9sp"
            android:layout_alignParentRight="true"
            android:id="@+id/my_blog_point"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f6f6f6"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:drawableLeft="@drawable/my_detail_care"
            android:drawableRight="@drawable/arrow_right"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="关注"
            android:textSize="15sp"
            android:textColor="#333333"
            android:drawablePadding="14dp"
            android:gravity="left|center_vertical"
            android:background="@drawable/button_select_tran"
            android:id="@+id/my_detail_care_button"
            style="@style/ButtonStyle"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="1"
            android:background="@drawable/icon_message_point"
            android:textSize="9sp"
            android:layout_alignParentRight="true"
            android:id="@+id/my_care_point"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f6f6f6"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:drawableLeft="@drawable/my_detail_ask"
        android:drawableRight="@drawable/arrow_right"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="提问"
        android:textSize="15sp"
        android:textColor="#333333"
        android:drawablePadding="14dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/button_select_tran"
        android:id="@+id/my_detail_question_button"
        style="@style/ButtonStyle"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="1"
        android:background="@drawable/icon_message_point"
        android:textSize="9sp"
        android:layout_alignParentRight="true"
        android:id="@+id/my_ask_point"
        android:layout_marginRight="30dp"
        android:layout_centerVertical="true"
        />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f6f6f6"
        />
</LinearLayout>