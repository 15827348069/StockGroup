<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@drawable/list_item_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
    <ImageView
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:id="@+id/box_img_id"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/box_img_id"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="短线T策略"
            android:textSize="15dp"
            android:textColor="#333333"
            android:id="@+id/box_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2小时前"
            android:id="@+id/box_upde_time"
            android:textColor="#999999"
            android:textSize="10dp"
            android:layout_marginTop="3dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:id="@+id/tag_layout"
            >
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/box_desc"
            android:textColor="#666666"
            android:textSize="12dp"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:lineSpacingExtra="2dp"
            android:lineSpacingMultiplier="1"
            android:text="铁粉服务介绍铁粉服务介绍铁粉服务介绍铁粉服务介绍铁粉服务介绍铁粉服务介绍"
            />
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>