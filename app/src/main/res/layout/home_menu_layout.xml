<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="69dp"
    android:gravity="center"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="股市直播"
        android:drawableLeft="@drawable/vedio_live"
        android:background="@drawable/button_select_tran"
        android:textColor="#515151"
        android:textSize="14sp"
        android:drawablePadding="4dp"
        android:padding="10dp"
        style="@style/ButtonStyle"
        android:id="@+id/stock_live"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="股票学院"
            android:drawableLeft="@drawable/stock_study"
            android:background="@drawable/button_select_tran"
            android:textColor="#515151"
            android:padding="10dp"
            android:textSize="14sp"
            android:drawablePadding="4dp"
            android:id="@+id/stock_study"
            style="@style/ButtonStyle"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="魔方有约"
            android:padding="10dp"
            android:drawableLeft="@drawable/mf_have_meet"
            android:background="@drawable/button_select_tran"
            android:textColor="#515151"
            android:textSize="14sp"
            android:drawablePadding="4dp"
            style="@style/ButtonStyle"
            />
        </LinearLayout>

</LinearLayout>