<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/list_item_select"
                android:orientation="horizontal"
                android:paddingBottom="11dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="11dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/blog_message_layout"
        >
    <ImageView
        android:id="@+id/head_message_img"
        android:layout_width="104dp"
        android:layout_height="69dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/head_message_img"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/head_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:lineSpacingMultiplier="1"
            android:maxLines="2"
            android:minLines="2"
            android:textColor="#333333"
            android:textSize="14sp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <com.zbmf.groupro.view.RoundedCornerImageView
                    android:id="@+id/head_message_avatar"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@drawable/avatar_default"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/head_message_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:textColor="#666666"
                    android:textSize="11sp"
                    android:visibility="visible"
                    />

                <TextView
                    android:id="@+id/head_message_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:textColor="#b0b0b0"
                    android:textSize="11sp"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/head_message_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:drawableLeft="@drawable/icon_look_number"
                    android:drawablePadding="4dp"
                    android:textColor="#b8b8b8"
                    android:textSize="11sp"
                    />

                <TextView
                    android:id="@+id/head_message_pinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/icon_pingl"
                    android:drawablePadding="4dp"
                    android:textColor="#b8b8b8"
                    android:textSize="11sp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/no_blog_message"
            android:gravity="center"
            android:text="该博文已被删除！"
            android:textSize="13dp"
            android:textColor="#b8b8b8"
            android:visibility="gone"
            />
</RelativeLayout>