<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingRight="5dp"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/arrow_top"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:id="@+id/arrow_top_img"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#49484b"
            android:layout_below="@+id/arrow_top_img"
            >
            <android.support.v7.widget.SwitchCompat
                android:id="@+id/live_new_msg_vedio"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:checked="true"
                android:background="@color/transparent"
                android:text="直播室消息提醒"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                    />
            <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="#5c5b5d"/>
                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/chat_new_msg_vedio"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:checked="true"
                    android:background="@color/transparent"
                    android:text="群聊消息推送"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:visibility="gone"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#5c5b5d"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/setting_text_size"
            android:background="@drawable/button_select_tran_red"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="字号调整"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_setting_text_size"
                    />
        </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#5c5b5d"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/button_select_tran_red"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/live_histtory_button"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="直播历史"
                    android:textSize="14dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_live_history"
                    />
        </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#5c5b5d"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:id="@+id/caue_care"
                    android:background="@drawable/button_select_tran_red"
                    android:text="取消关注"
                    android:gravity="left|center_vertical"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    />
        </LinearLayout>
</RelativeLayout>