<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e3e3e3"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/group_main_munu"
        >
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/home_menu"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_weight="1"
            android:text="首页"
            android:textSize="10dp"
            android:drawablePadding="7dp"
            android:gravity="center"
            android:background="@drawable/menu_button_select_tran"
            android:drawableTop="@drawable/home_drawable"
            android:button="@null"
            android:checked="true"
            android:textColor="@drawable/text_select_color"
            />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/care_menu"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_weight="1"
            android:text="关注"
            android:textSize="10dp"
            android:drawablePadding="7dp"
            android:gravity="center"
            android:background="@drawable/menu_button_select_tran"
            android:drawableTop="@drawable/care_drawable"
            android:button="@null"
            android:textColor="@drawable/text_select_color"
            />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/study_menu"
            android:layout_weight="1"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="学院"
            android:visibility="gone"
            android:textSize="10dp"
            android:drawablePadding="7dp"
            android:gravity="center"
            android:background="@drawable/menu_button_select_tran"
            android:drawableTop="@drawable/xueyuan_drawable"
            android:button="@null"
            android:textColor="@drawable/text_select_color"
            />
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/my_detail"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:text="个人"
                android:textSize="10dp"
                android:drawablePadding="7dp"
                android:gravity="center"
                android:background="@drawable/menu_button_select_tran"
                android:drawableTop="@drawable/my_detail_munu_drawable"
                android:button="@null"
                android:textColor="@drawable/text_select_color"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
    </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:focusable="false"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="123"
                android:textColor="@color/colorAccent"
                android:background="@drawable/red_point_bg"
                android:textSize="9sp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:id="@+id/home_menu_point"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:focusable="false"
                >
                <TextView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:visibility="invisible"
                    android:text="00"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/red_point_bg"
                    android:textSize="9sp"
                    android:layout_marginRight="28dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/care_menu_point"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:focusable="false"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:text="123"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/red_point_bg"
                    android:textSize="9sp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/study_menu_point"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:focusable="false"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible"
                    android:text="1"
                    android:background="@drawable/icon_message_point"
                    android:textSize="9sp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/my_detail_point"
                    android:layout_marginRight="30dp"
                    android:layout_centerVertical="true"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>