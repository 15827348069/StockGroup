<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/group_layout_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">
    <com.zbmf.groupro.view.PullToRefreshScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/home_scrollview"
        ptr:ptrAnimationStyle="flip"
        android:layout_below="@+id/title_layout"
        android:layout_above="@+id/fans_bottom_layout"
        android:background="@color/group_layout_background"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_my_backound"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:id="@+id/my_message_layout"
                android:gravity="center_vertical"
                android:paddingTop="50dp"
                >
            <com.zbmf.groupro.view.RoundedCornerImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:src="@drawable/avatar_default"
                android:id="@+id/my_detail_avatar_id"
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/my_detail_names"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:paddingBottom="4dp"
                android:layout_marginLeft="10dp"
                android:maxLength="8"
                android:ellipsize="end"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                >
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:id="@+id/qiandao_button"
                    android:button="@null"
                    android:background="@drawable/qiandao"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:visibility="gone"
                >
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_my_message"
                        android:id="@+id/my_detail_message"
                        android:layout_centerVertical="true"
                        android:background="@drawable/button_select_tran_red"
                        />
                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:text=""
                        android:gravity="center"
                        android:textColor="@color/button_text"
                        android:background="@drawable/red_point_bg"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="9sp"
                        android:visibility="gone"
                        android:id="@+id/message_count_text"
                        />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="118dp"
            android:layout_height="71dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:background="@drawable/button_select_tran"
            android:id="@+id/my_detail_mfb_button"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:id="@+id/my_detail_mfb"
                android:paddingBottom="4dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="魔方宝"
                android:textSize="13sp"
                android:textColor="@color/button_text"
                android:paddingTop="4dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="118dp"
            android:layout_height="71dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_select_tran"
            android:id="@+id/my_detail_yhq_button"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:id="@+id/my_detail_yhq"
                android:paddingBottom="4dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠券"
                android:textSize="13sp"
                android:textColor="@color/button_text"
                android:paddingTop="4dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="118dp"
            android:layout_height="71dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_select_tran"
            android:id="@+id/my_detail_jf_button"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/my_detail_jf"
                android:paddingBottom="4dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分"
                android:textSize="13sp"
                android:textColor="@color/button_text"
                android:paddingTop="4dp"
                />
        </LinearLayout>
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_yy"
            />
        <include layout="@layout/my_detail_menu_layout"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_yy"
            />
        <include layout="@layout/my_detail_setting_layout"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_yy"
            />
    </LinearLayout>
    </com.zbmf.groupro.view.PullToRefreshScrollView>
</LinearLayout>