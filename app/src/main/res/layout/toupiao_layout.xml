<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/group_layout_background"
        android:orientation="vertical"
        android:paddingTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="故事小时能守"
            android:textColor="#333333"
            android:textSize="15sp"
            android:layout_marginLeft="100dp"
            android:id="@+id/toupiao_tercher_name"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月排名：12"
                android:id="@+id/month_arrow"
                android:textColor="#999999"
                android:textSize="10sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总排名：234"
                android:textColor="#999999"
                android:textSize="10sp"
                android:id="@+id/all_arrow"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:paddingLeft="34dp"
            android:paddingRight="34dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投票数"
                android:textColor="#333333"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                >
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="-"
                    android:textColor="#8c8c8c"
                    android:textSize="14sp"
                    android:background="@drawable/button_select_tran"
                    android:id="@+id/plus_button"
                    />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:textColor="#333333"
                    android:id="@+id/toupiao_count_text"
                    />
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="+"
                    android:textColor="#8c8c8c"
                    android:textSize="14sp"
                    android:background="@drawable/button_select_tran"
                    android:id="@+id/add_button"
                    />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="34dp"
            android:paddingRight="34dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消耗魔方宝"
                android:textColor="#333333"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/tp_need_mfb"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="25dp"
            android:textSize="15sp"
            android:background="@drawable/button_select"
            android:text="投票"
            android:id="@+id/toupiao_tercher_button"
            style="@style/ButtonStyle"
            />
    </LinearLayout>
    <com.zbmf.groupro.view.RoundedCornerImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/avatar_default"
        android:background="@color/transparent"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="5dp"
        android:id="@+id/toupiao_tercher_avatar"
        />
</RelativeLayout>