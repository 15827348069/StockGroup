<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="11dp"
    android:paddingBottom="11dp"
    android:background="@drawable/list_item_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="97dp"
        android:layout_height="69dp"
        android:id="@+id/head_message_img"
        android:src="@drawable/avatar_default"
        android:layout_centerVertical="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/head_message_img"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/head_message_title"
            android:textColor="#333333"
            android:textSize="14sp"
            android:maxLines="2"
            android:lineSpacingExtra="5dp"
            android:lineSpacingMultiplier="1"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#b0b0b0"
                android:textSize="11sp"
                android:id="@+id/head_message_date"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#b8b8b8"
                    android:textSize="11sp"
                    android:drawableLeft="@drawable/icon_look_number"
                    android:layout_marginRight="5dp"
                    android:drawablePadding="4dp"
                    android:id="@+id/head_message_look"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#b8b8b8"
                    android:textSize="11sp"
                    android:drawableLeft="@drawable/icon_pingl"
                    android:drawablePadding="4dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/head_message_pinglun"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>