<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    android:id="@+id/title_layout"
    >

    <com.zbmf.groupro.view.RoundedCornerImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/transparent"
        android:id="@+id/group_head_avatar"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/group_head_return"
        android:layout_marginLeft="8dp"
        android:visibility="visible"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/group_head_avatar"
        android:layout_centerVertical="true"
        android:id="@+id/group_head_name"
        android:textSize="13dp"
        android:visibility="gone"
        />
    <com.zbmf.groupro.view.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabIndicatorHeight="1dp"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabTextColor="#aaaaaa"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
        android:fillViewport="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />
    <RelativeLayout
        android:layout_width="32dp"
        android:layout_height="33dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/setting_layout_id"
        >
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/icon_group_setting"
        android:id="@+id/group_head_setting"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/care_about"
        android:id="@+id/care_about_button"
        android:visibility="visible"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />
    </RelativeLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/icon_msg"
        android:id="@+id/group_head_msg"
        android:visibility="visible"
        android:paddingRight="5dp"
        android:layout_marginRight="5dp"
        android:paddingLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/setting_layout_id"
    />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/transparent"
        android:src="@drawable/icon_return"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:id="@+id/group_head_return"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>