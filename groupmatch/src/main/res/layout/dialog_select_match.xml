<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:background="@drawable/dialog_alarm_bg"
    android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           android:paddingTop="14dp" android:paddingBottom="14dp"
            android:gravity="center" android:background="@drawable/fillet_grey_r7"
            android:text="@string/select_tip"
            android:textAppearance="@style/TextAppear.Theme.c3_Size19" />

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" android:background="@color/ca"
            android:divider="#242424"
            android:dividerHeight="0.5dp"></ListView>

        <TextView android:background="@drawable/fillet_grey_r7a"
            android:id="@+id/tvConfirm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:text="@string/cancel"
            android:textColor="#157cf6"
            android:textSize="17sp" />
</LinearLayout>
