<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01-06"
                android:textColor="#8d8d8d"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="明明股票(666666)"
                android:textAppearance="@style/TextAppear.Theme.cb_Size17" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="@string/cjj"
                android:textAppearance="@style/TextAppear.Theme.cb_Size17" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买入"
                android:textColor="#8d8d8d"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text=""
                android:textAppearance="@style/TextAppear.Theme.cb_Size17" />

            <TextView
                android:id="@+id/tv_transnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="@string/tran_num"
                android:textAppearance="@style/TextAppear.Theme.cb_Size17" />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_op"
        android:layout_width="67dp"
        android:layout_height="29dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_button_layout_red"
        android:text="@string/seesee" android:gravity="center"
        android:textColor="@color/ca"
        android:textSize="15sp" />

</LinearLayout>
