<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp" android:minHeight="45dp"
    android:background="@color/ca">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp" android:maxLines="1"
        android:text="股票名字" android:ellipsize="end"
        android:textColor="@color/item_text_selector"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:text="600000"
        android:textColor="@color/item_text_selector"
        android:textSize="13sp" />

</RelativeLayout>
