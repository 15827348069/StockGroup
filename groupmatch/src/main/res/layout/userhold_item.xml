<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="15dp" android:background="@drawable/list_item"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="96dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="明明股票"
            android:textAppearance="@style/TextAppear.Theme.c3_Size16" />


        <TextView android:layout_marginTop="7dp"
            android:id="@+id/tv_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="666666"
            android:textAppearance="@style/TextAppear.Theme.c3_Size16" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cbj"
            android:textAppearance="@style/TextAppear.Theme.c3_Size16" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_1"
            android:text="11.88"
            android:textAppearance="@style/TextAppear.Theme.c3_Size16" />


        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_1"
            android:text="@string/syl" android:layout_marginTop="7dp"
            android:textAppearance="@style/TextAppear.Theme.c3_Size16" />

        <TextView
            android:id="@+id/tv_syl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_2"
            android:layout_toRightOf="@id/tv_2"
            android:text="18.8%"
            android:textAppearance="@style/TextAppear.Theme.c3_Size16" />

    </RelativeLayout>
</LinearLayout>
