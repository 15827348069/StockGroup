<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_alarm_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvTip"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppear.Theme.c3_Size16" />

    <include layout="@layout/line_da" />

    <LinearLayout
        android:id="@+id/llConfirm"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center"
            android:text="确认"
            android:textColor="#157cf6"
            android:textSize="17sp" />
<LinearLayout
    android:layout_width="1dp" android:orientation="vertical"
    android:layout_height="match_parent"><include layout="@layout/line_cd_v"/></LinearLayout>

        <TextView
            android:id="@+id/tvCancl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="继续编辑"
            android:textColor="#157cf6"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>