<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/b"
    android:orientation="vertical">

    <include layout="@layout/match_title_layout" />

    <com.zbmf.StocksMatch.widget.pulltorefresh.PullToRefreshListView xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1"
        android:divider="#c2c2c2" ptr:ptrAnimationStyle="flip"
        ptr:ptrMode="both"
        android:dividerHeight="0.0dp" />
</LinearLayout>
