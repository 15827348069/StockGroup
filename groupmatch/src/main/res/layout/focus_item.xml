<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:minHeight="55dp" android:background="@drawable/list_item"
    android:paddingLeft="15dp" android:paddingRight="15dp"
    android:paddingTop="4dp">

    <com.zbmf.StocksMatch.widget.CircleImageView
        android:id="@+id/civ"
        android:layout_width="45dp"
        android:layout_height="45dp" android:layout_marginRight="10dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/civ"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppear.Theme.cb_Size14" />

    <LinearLayout android:id="@+id/ll_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="4dp">

        <include layout="@layout/line_cd" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_right"
        style="@style/iv_more"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
</RelativeLayout>
